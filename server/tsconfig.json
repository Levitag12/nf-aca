{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", // Módulo ESNext é mais moderno e compatível com o ecossistema atual
    "moduleResolution": "Node",
    "outDir": "../dist/server", // <-- CORRIGIDO: Aponta para a pasta dist na raiz
    "rootDir": "src",           // <-- CORRIGIDO: Define a pasta 'src' como raiz
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "../shared/**/*.ts"], // Inclui apenas a pasta src
  "exclude": ["node_modules"]
}